<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <include layout="@layout/activity_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/register_main"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        tools:context=".view.RegisterActivity">
        <EditText
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/account_et"
            android:layout_width="match_parent"
            android:background="@drawable/translucent_edit"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:singleLine="true"
            android:hint="@string/str_username_et"
            android:maxLength="5"
            android:layout_height="wrap_content"/>

        <EditText

            android:gravity="center"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/account_et"
            android:inputType="text"
           android:maxLines="10"
            android:background="@drawable/translucent_edit"
            android:id="@+id/name_et"
            android:hint="@string/str_name_et"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:gravity="center"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/name_et"
            android:inputType="textPassword"
            android:id="@+id/password_et"
            android:background="@drawable/translucent_edit"
            android:maxLength="15"
            android:singleLine="true"
            android:hint="@string/str_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/password_et"
            android:inputType="textPassword"
            android:maxLength="15"
            android:singleLine="true"
            android:background="@drawable/translucent_edit"
            android:id="@+id/qr_password_et"
            android:hint="@string/str_qr_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/qr_password_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/back_btn"
            android:id="@+id/register_btn"
            android:textColor="@color/white"
            android:text="@string/register_btn"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:background="@drawable/translucent_button"
            android:layout_height="wrap_content" />
        <Button
            app:layout_constraintTop_toTopOf="@id/register_btn"
            app:layout_constraintBottom_toBottomOf="@id/register_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/register_btn"
            android:textColor="@color/white"
            android:id="@+id/back_btn"
            android:text="@string/back_login_btn"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:background="@drawable/translucent_button"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
