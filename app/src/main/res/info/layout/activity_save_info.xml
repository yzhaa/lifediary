<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <LinearLayout
        android:background="#EDECEC"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/change_icon_item"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="10dp"
            android:background="?android:windowBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_item_height">

            <TextView
                android:textSize="@dimen/change_label_textSize"
                android:textColor="@color/change_label_color"
                android:layout_centerVertical="true"
                android:text="头像"
                android:id="@+id/change_icon_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerVertical="true"
                android:id="@+id/change_icon_iv"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_toStartOf="@id/change_icon_jt" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/change_icon_jt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/jiantou" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_name_item"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="?android:windowBackground"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_item_height">
            <TextView
                android:textSize="@dimen/change_label_textSize"
                android:layout_centerVertical="true"
                android:textColor="@color/change_label_color"
                android:text="名字"
                android:id="@+id/change_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/change_name_tv"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_toStartOf="@id/change_name_jt"
                android:gravity="center" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/change_name_jt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/jiantou" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_password_item"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="?android:windowBackground"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_item_height">

            <TextView
                android:textSize="@dimen/change_label_textSize"
                android:textColor="@color/change_label_color"
                android:layout_centerVertical="true"
                android:text="密码"
                android:id="@+id/change_password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/change_password_jt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/jiantou" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>