<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/register">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/login_ll_pw"
        android:fitsSystemWindows="true"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:id="@+id/register_tv_id"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/str_password_tv" android:textSize="26sp"/>
        <EditText
            android:id="@+id/tv_password_save"
            android:layout_width="match_parent"
            android:layout_marginEnd="30dp"
            android:hint="@string/str_password_et"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:layout_above="@id/login_ll_pw"
        android:id="@+id/login_ll_id"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_tv_pw"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:text="@string/str_username_tv" android:textSize="26sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:hint="@string/str_username_et"
            android:inputType="text"
            android:id="@+id/tv_username_save"
            />
    </LinearLayout>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/saveInfo_btn"
        android:text="@string/info_save"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/login_ll_pw"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_drawable"
        android:layout_height="wrap_content" />

</RelativeLayout>